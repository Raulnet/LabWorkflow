{% extends 'base.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block body %}
    <h1>BlogPost #{{ blog_post.id }}</h1>

    <div class="card">
        <div class="card-header">
            {{ blog_post.title }}
        </div>
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog_post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog_post.content }}</td>
            </tr>
            <tr>
                <th>CurrentPlace</th>
                <td>{{ blog_post.currentPlace }}</td>
            </tr>
            </tbody>
        </table>
        <div class="card-footer">
            <a class="btn btn-success float-right" href="{{ path('blog_post_edit', {'id': blog_post.id}) }}">edit</a>
            <a class="btn btn-outline-primary" href="{{ path('blog_post_index') }}">back to list</a>
        </div>
    </div>
{% endblock %}
